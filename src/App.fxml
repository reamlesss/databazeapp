       <Label text="Úprava informace:" />
   
       <!-- Tlačítko pro úpravu -->
       <Button onAction="#handleUpdate" text="Upravit" />
   
       <!-- Mezera mezi sekcemi -->
       <Region prefHeight="20.0" />
   
       <!-- Popisek pro sekci importu, můžete změnit text dle potřeby -->
       <Label text="Import dat:" />
   
       <!-- Tlačítko pro import CSV -->
       <Button onAction="#handleImportCSV" text="Import CSV" />
       
       <!-- Tlačítko pro import XML -->
       <Button onAction="#handleImportXML" text="Import XML" />
   
